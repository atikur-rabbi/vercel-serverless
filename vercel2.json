{
    "builds": [
        {
            "src": "**/*.html",
            "use": "@now/static"
        },
        {
            "src": "**/*.py",
            "use": "@now/python"
        },
        {
            "src": "**/*.js",
            "use": "@now/node"
        },
        {
            "src": "**/*.go",
            "use": "@now/go"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/python",
            "dest": "api/app_python.py"
        },
        {
            "src": "/js",
            "dest": "api/app_js.js"
        },
        {
            "src": "/go",
            "dest": "api/app_go.go"
        }
    ]
}

{
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.3.1"
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "https://juicy.vercel.app/favicon.ico"
        }
    ]
}