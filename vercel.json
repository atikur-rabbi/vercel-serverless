{
    "functions": {
        "**/*.html": {
            "runtime": "@now/static"
        },
        "**/*.py": {
            "runtime": "@now/python"
        }
    },
    "routes": [
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/python",
            "dest": "api/app_python.py"
        },
        {
            "src": "/js",
            "dest": "api/app_js.js"
        },
        {
            "src": "/go",
            "dest": "api/app_go.go"
        }
    ]
}

